<odoo>

    <record model="ir.actions.act_window" id="action_list_markets">
        <field name="name">Markets</field>
        <field name="res_model">test13.market</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_market" parent="menu_stores_app" name="Markets" sequence="10"
              action="action_list_markets"/>

    <record model="ir.ui.view" id="view_movies_tree">
        <field name="name">view.markets</field>
        <field name="model">test13.market</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_market_form">
        <field name="name">view.market</field>
        <field name="model">test13.market</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </group>

                </sheet>
            </form>
        </field>
    </record>

</odoo>