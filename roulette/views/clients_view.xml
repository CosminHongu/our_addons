<odoo>


    <record id="action_list_clients" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">test13_client</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_clients" parent="menu_tickets_app" name="Clients" sequence="10"
              action="action_list_clients"/>


    <record id="view_clients_tree" model="ir.ui.view" >
        <field name="name">test_client.tree</field>
        <field name="model">test13_client</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="view_clients_form" model="ir.ui.view" >
        <field name="name">test13_client.form</field>
        <field name="model">test13_client</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                    </group>
                    <group>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="addres"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>