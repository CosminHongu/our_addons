<odoo>

    <menuitem id="menu_roulettes_app" name="Roulettes"/>

    <record model="ir.actions.act_window" id="action_list_roulettes">
        <field name="name">Roulette</field>
        <field name="res_model">test13.roulette</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <menuitem id="menu_roulettes" parent="menu_roulettes_app" name="Roulettes" sequence="10"
              action="action_list_roulettes"/>


    <record model="ir.ui.view" id="view_roulettes_tree">
        <field name="name">view.roulette</field>
        <field name="model">test13.roulette</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="student_kanban" model="ir.ui.view">
        <field name="name">view.roullete</field>
        <field name="model">test13.roulette</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="id"/>
                <field name="image" widget="image" class="oe_avatar"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Avatar"
                                     t-att-src="kanban_image('test13.roulette','image',record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <t class="o_kanban_record_title">
                                    <h1 t-esc="record.name.value"/>
                                </t>
                                <div t-attf-class="oe_kanban_content">
                                    <field name="image" widdget="image" class="oe_avatar"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="view_roulettes_form">
        <field name="name">view.clients</field>
        <field name="model">test13.roulette</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="data"/>
                    </group>

                    <group>
                        <center>
                            <field name="image" widget="image"/>
                        </center>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
</odoo>