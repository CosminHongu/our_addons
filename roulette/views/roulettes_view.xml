<odoo>

    <menuitem id="menu_roulettes_app" name="Roulette"/>

    <record model="ir.actions.act_window" id="action_list_roulettes">
        <field name="name">Roulette</field>
        <field name="res_model">test13.roulette</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_roulettes" parent="menu_roulettes_app" name="Roulettes" sequence="10"
              action="action_list_roulettes"/>


    <record model="ir.ui.view" id="view_roulettes_tree">
        <field name="name">view.roulette</field>
        <field name="model">test13.roulette</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_roulettes_form">
        <field name="name">view.roulette</field>
        <field name="model">test13.roulette</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <center>
                        <p style="font-size:50px">
                            <field name="name"/>
                        </p>
                    </center>
                    <group>
                        <center>
                            <field name="name"/>
                        </center>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>